<%- include ../layouts/header_dashboard.ejs %> 
<script type="text/javascript" src="/scripts/messages.js"></script>
       <!-- Container Fluid-->
       <div class="container-fluid" id="container-wrapper">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
          <h1 class="h3 mb-0 text-gray-800">Inicio</h1>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Pagina Principal</a></li>
            <li class="breadcrumb-item">Dashboard</li>
 
          </ol>
        </div>
       
        <!-- Row -->
        <div class="row">
          <!-- Datatables -->
          <div class="col-lg-12">
            <div class="card mb-4">
              <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Lista de Usuarios</h6>
                <% if(typeof message!= "undefined" && message) { %>
                  <div class="alert alert-danger alert-dismissible fade show" role="alert"><%= message %></div>
      
              <% } %>
              
              </div>
 
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <a href="/dashboard/newuser" class="btn btn-success" type="button">Crear Usuario <i class="fas fa-user-plus"></i></a>
                </div>
    
              <div class="table-responsive p-3">
                <table class="table align-items-center table-flush" id="dataTable">
                  <thead class="thead-light">
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Usuario</th>
                        <th>Imagen</th>
                        <th>Acciones</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Usuario</th>
                        <th>Imagen</th>
                        <th>Acciones</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% for( let usuario = 0; usuario < usuarios.length; usuario++ ) { %>
                        <tr>
  
                            <td> <%=usuarios[usuario].id_user %> </td>
                            <td> <%=usuarios[usuario].name %> </td>
                            <td> <%=usuarios[usuario].email %> </td>

                            <td> <img class="img-thumbnail" width="100" src="images/<%=usuarios[usuario].image %>" alt=""></td>
                            <td>       <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                              <form class="form-inline" method="get" action="/dashboard/edit/<%=usuarios[usuario].id_user %>">
                                  <button class="btn btn-warning" type="submit">Editar <i class="fas fa-edit"></i></button>
                              </form>
                          </div>
                          |
                          <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                              <form class="form-inline">
                                  <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#modal<%=usuarios[usuario].id_user%>">Eliminar <i class="fas fa-trash-alt"></i></button>

                              </form>
                          </div>  </td>
                        </tr>

                        <div class="modal fade" id="modal<%=usuarios[usuario].id_user%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                               <center> <h5 class="modal-title" id="exampleModalLabel">Alerta <i class="fas fa-exclamation-triangle"></i></h5></center>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                               
  
                                <div class="form-group">
                                  <h4 for="message-text" class="modal-title">Â¿Deseas eliminar al usuario <b><%=usuarios[usuario].name%></b>?</h4>
                                
                                </div>
                            
                             
                                
                              </div>
  
                       
                              <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar <i class="fas fa-times"></i></button>
                                <form class="form-inline" method="post" action="/dashboard/delete/<%=usuarios[usuario].id_user %>">
                                  <button class="btn btn-danger" type="submit">Eliminar <i class="fas fa-trash-alt"></i></button>

                              </form>

                              


                          
                        
                        
                            </div>
                          </div>
                        </div>
                      </div>
  


                        <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- DataTable with Hover -->
      
        </div>





        <!--Row-->

        <!-- Documentation Link -->


        <!-- Modal Logout -->
        

      </div>
      <!---Container Fluid-->
    

      <%- include ../layouts/footer_dashboard.ejs %> 
